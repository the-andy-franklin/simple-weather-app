{
	"tasks": {
		"dev": "deno run -A --watch --inspect-wait src/server.ts",
		"start": "deno run -A src/server.ts",
		"test": "deno test --import-map=tests/unit.test.importmap.json -A tests/server.test.ts"
	},
	"imports": {
		"hono/": "https://deno.land/x/hono@v4.3.11/",
		"zod": "npm:zod",
		"axios": "npm:axios",
		"fp-try": "jsr:@2or3godzillas/fp-try",
		"dotenv": "https://deno.land/std@0.224.0/dotenv/mod.ts",
		"redis": "https://deno.land/x/redis@v0.32.4/mod.ts"
	},
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"noUncheckedIndexedAccess": true
	},
	"fmt": {
		"lineWidth": 120,
		"indentWidth": 2,
		"useTabs": true
	},
	"lint": {
		"rules": {
			"exclude": [
				"no-unused-vars",
				"no-explicit-any"
			]
		}
	}
}
